{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-case": [
      2,
      "always",
      [
        "lower-case",
        "upper-case",
        "camel-case",
        "kebab-case",
        "pascal-case",
        "sentence-case",
        "snake-case",
        "start-case"
      ]
    ],
    "header-max-length": [2, "always", 100]
  }
}
